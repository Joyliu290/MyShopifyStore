<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/concertImage"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/concertName"
        android:layout_toRightOf="@id/concertImage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/concertTime"
        android:layout_toRightOf="@id/concertImage"
        android:layout_below="@+id/concertName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/concertLocation"
        android:layout_toRightOf="@id/concertImage"
        android:layout_below="@+id/concertTime"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/concertImage"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:id="@+id/horizontalLine1"
        android:background="#fbb0c3"/>

</RelativeLayout>